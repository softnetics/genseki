{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "tests",
    "coverage",
    "playground",
    "examples",
    "**/*.test.{ts,tsx,js,jsx}",
    "**/*.spec.{ts,tsx,js,jsx}"
  ]
}
