{
  "name": "@genseki/next",
  "description": "Next.js integration for Genseki",
  "version": "0.1.0-alpha.36",
  "sideEffects": false,
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/src/index.js",
        "types": "./dist/src/index.d.ts"
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc",
    "bundle": "rm -rf dist && tsc -p tsconfig.bundle.json"
  },
  "dependencies": {
    "@genseki/react": "workspace:^",
    "cookie-es": "^2.0.0",
    "next": "^15.2.2",
    "nuqs": "^2.4.3",
    "radix3": "^1.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "tsup": "^8.5.0",
    "type-fest": "^4.41.0",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "next": ">=15.2.2 <16.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
