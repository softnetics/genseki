{
  "name": "@genseki/ui",
  "sideEffects": false,
  "type": "module",
  "version": "1.1.0",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./tailwind.css": "./dist/src/styles/tailwind.css",
    "./tiptap.css": "./dist/src/styles/tiptap-style.css"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/src/index.js",
        "require": "./dist/src/index.js",
        "types": "./dist/src/index.d.ts"
      },
      "./tailwind.css": "./dist/src/styles/tailwind.css",
      "./tiptap.css": "./dist/src/styles/tiptap-style.css"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc",
    "test": "vitest run --passWithNoTests",
    "diagnostics": "tsc --noEmit --extendedDiagnostics",
    "bundle": "rm -rf dist && tsc -p tsconfig.bundle.json && pnpm copy-styles",
    "copy-styles": "mkdir -p dist/src/styles && cp src/styles/*.css dist/src/styles"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.8",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "input-otp": "^1.4.2",
    "nuqs": "^2.8.3",
    "react": "^19.1.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.0.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.3.4",
    "color": "^5.0.2",
    "tsup": "^8.5.0",
    "type-fest": "^4.38.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "color": "^5.0.2",
    "react": "^19.1.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8"
  }
}
